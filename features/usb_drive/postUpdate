#!/bin/bash

if dpkg-query -W usbmount; then
  echo 'usbmount already installed'
else
  if uname -r | grep 3.8.1; then
    sudo dpkg -i ~/pocketnc/Settings/features/usb_drive/usbmount_0.0.22_all.deb
  else
    sudo dpkg -i ~/pocketnc/Settings/features/usb_drive/usbmount_0.0.24_all.deb
  fi
  sudo apt-get install -f
fi

